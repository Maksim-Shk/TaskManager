@page "/TaskInfo/{Id:int}"
@using TaskManager.Application.Tasks.Queries.GetTask;

@inject HttpClient httpClient
@inject NavigationManager NavigationManager

<PageTitle>@getTaskDto.Name</PageTitle>

<Card Margin="Margin.Is4.OnY">
    <CardBody>
        <dl class="row">
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.Name
            </dd>
            <dt class="col-sm-2">
                Описание
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.Description
            </dd>
            <dt class="col-sm-2">
                Постановщик
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.SenderName
            </dd>
            <dt class="col-sm-2">
                Исполнитель
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.ReceiverName
            </dd>
            <dt class="col-sm-2">
                Статус
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.Status
            </dd>
                        <dt class="col-sm-2">
                Дата создания
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.CreatedDate
            </dd>
            <dt class="col-sm-2">
                Дата последнего изменения
            </dt>
            <dd class="col-sm-10">
                @getTaskDto.LastChangeDate
            </dd>
        </dl>
    </CardBody>
</Card>

@code {
    [Parameter]
    public int Id { get; set; }

    GetTaskDto getTaskDto = new();

    protected override async Task OnInitializedAsync()
    {
        getTaskDto = await httpClient.GetFromJsonAsync<GetTaskDto>("Task/GetTask/" + Id);
    }
}
